<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sj_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_grey_item_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_graphic"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:src="@drawable/graph" />

    <ImageView
        android:id="@+id/contact_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/background_avatar"
        android:padding="2dp"
        android:src="@drawable/icon_avatar_small" />

    <LinearLayout
        android:id="@+id/selected_contact_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/small_grey"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/small_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/contact_delete_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_delete" />
</LinearLayout>